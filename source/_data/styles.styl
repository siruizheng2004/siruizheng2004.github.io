// About Page Styles
.about-summary {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px;
}

.profile-header {
  display: flex;
  align-items: center;
  gap: 40px;
  margin-bottom: 50px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40px;
  border-radius: 20px;
  color: white;
  
  @media (max-width: 768px) {
    flex-direction: column;
    text-align: center;
    gap: 20px;
  }
}

.profile-avatar {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  border: 5px solid white;
  box-shadow: 0 10px 30px rgba(0,0,0,0.3);
  object-fit: cover;
}

.profile-quick-info {
  flex: 1;
  
  h1 {
    font-size: 2.5em;
    margin-bottom: 10px;
    color: white;
  }
  
  .title {
    font-size: 1.2em;
    opacity: 0.9;
    margin-bottom: 15px;
  }
  
  .location {
    font-size: 1em;
    opacity: 0.8;
    margin-bottom: 25px;
  }
}

.quick-stats {
  display: flex;
  gap: 30px;
  margin: 30px 0;
  
  .stat {
    text-align: center;
    
    .stat-number {
      display: block;
      font-size: 2em;
      font-weight: bold;
    }
    
    .stat-label {
      font-size: 0.9em;
      opacity: 0.8;
    }
  }
}

.contact-links {
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
  
  .contact-btn {
    background: rgba(255,255,255,0.2);
    border: 2px solid white;
    color: white;
    padding: 10px 20px;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
    
    &:hover {
      background: white;
      color: #764ba2;
    }
    
    i {
      margin-right: 8px;
    }
  }
}

// Category Grid
.category-links {
  margin-top: 60px;
  
  h2 {
    text-align: center;
    margin-bottom: 40px;
    color: #333;
  }
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 25px;
  margin-top: 20px;
}

.category-card {
  background: white;
  padding: 30px;
  border-radius: 15px;
  text-decoration: none;
  color: #333;
  box-shadow: 0 5px 20px rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  border: 2px solid transparent;
  
  &:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.15);
    border-color: #667eea;
  }
  
  i {
    font-size: 2.5em;
    color: #667eea;
    margin-bottom: 20px;
  }
  
  h3 {
    margin: 15px 0;
    color: #333;
  }
  
  p {
    color: #666;
    line-height: 1.6;
    margin: 0;
  }
}

// Category Pages
.about-intro {
  background: #f8f9fa;
  padding: 30px;
  border-radius: 15px;
  margin: 40px 0;
  line-height: 1.8;
  font-size: 1.1em;
  
  p {
    margin-bottom: 15px;
    
    &:last-child {
      margin-bottom: 0;
    }
  }
}

.course-table {
  overflow-x: auto;
  margin: 30px 0;
  
  table {
    width: 100%;
    border-collapse: collapse;
    
    th, td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #e0e0e0;
    }
    
    th {
      background-color: #f5f7fa;
      font-weight: 600;
    }
    
    tr:hover {
      background-color: #f9f9f9;
    }
  }
}

.honors-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  margin: 30px 0;
}

.honor-card {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  padding: 20px;
  border-radius: 10px;
  text-align: center;
  
  h4 {
    margin: 0 0 10px 0;
    font-size: 1.2em;
  }
  
  p {
    margin: 0;
    opacity: 0.9;
  }
}

// Timeline for research experience
.timeline-item {
  position: relative;
  padding: 20px 0 20px 30px;
  margin-bottom: 30px;
  
  &::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: #667eea;
  }
  
  &::after {
    content: '';
    position: absolute;
    left: -6px;
    top: 25px;
    width: 15px;
    height: 15px;
    background: #667eea;
    border-radius: 50%;
  }
  
  h3 {
    color: #333;
    margin: 0 0 5px 0;
  }
  
  .date {
    color: #667eea;
    font-weight: 600;
    margin-bottom: 10px;
    display: block;
  }
  
  ul {
    padding-left: 20px;
    
    li {
      margin-bottom: 8px;
      line-height: 1.6;
    }
  }
}

.skills-section {
  margin: 40px 0;
  
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
  }
  
  .skill-category {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 10px;
    
    h4 {
      margin-top: 0;
      color: #667eea;
    }
    
    ul {
      padding-left: 20px;
      margin: 0;
    }
  }
}

// Responsive Design
@media (max-width: 768px) {
  .profile-header {
    padding: 20px;
  }
  
  .quick-stats {
    gap: 15px;
    
    .stat-number {
      font-size: 1.5em;
    }
  }
  
  .category-grid {
    grid-template-columns: 1fr;
  }
  
  .honors-grid {
    grid-template-columns: 1fr;
  }
  
  .contact-links {
    justify-content: center;
  }
}
